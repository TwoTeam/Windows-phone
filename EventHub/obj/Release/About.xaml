<Page
    x:Class="EventHub.About"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:EventHub"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="Black" Offset="0"/>
                <GradientStop Color="#FFFF8318" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>
        <Grid HorizontalAlignment="Left" Height="62" Margin="10,10,0,0" VerticalAlignment="Top" Width="69">
            <Grid.Background>
                <ImageBrush Stretch="Fill" ImageSource="Assets/SmallLogo.png"/>
            </Grid.Background>
        </Grid>
        <TextBlock HorizontalAlignment="Left" Height="30" Margin="84,42,0,0" TextWrapping="Wrap" Text="About" VerticalAlignment="Top" Width="129" FontSize="24" Foreground="White"/>
        <TextBlock HorizontalAlignment="Left" Height="30" Margin="10,112,0,0" TextWrapping="Wrap" Text="Version: 1.0" VerticalAlignment="Top" Width="129" FontSize="24" Foreground="White"/>
        <HyperlinkButton x:Name="fb" Content="facebook" NavigateUri="https://www.facebook.com/EventHubApp" HorizontalAlignment="Left" Height="63" Margin="0,171,0,0" VerticalAlignment="Top" Width="400" FontSize="25" Foreground="White" BorderBrush="#FFD43131" Background="#00000000"/>
        <TextBlock HorizontalAlignment="Left" Height="33" Margin="123,486,0,0" TextWrapping="Wrap" Text="Trg mladosti 3" VerticalAlignment="Top" Width="157" FontSize="24" Foreground="White"/>
        <TextBlock HorizontalAlignment="Left" Height="33" Margin="59,524,0,0" TextWrapping="Wrap" Text="3320 Velenje, Slovenia (SI)" VerticalAlignment="Top" Width="290" FontSize="24" Foreground="White" />
        <TextBlock HorizontalAlignment="Left" Height="33" Margin="90,562,0,0" TextWrapping="Wrap" Text="+386 (0) 70 723 596" VerticalAlignment="Top" Width="221" FontSize="24" Foreground="White"/>
        <HyperlinkButton x:Name="twitter" Content="twitter" NavigateUri="https://twitter.com/EventHubApp" HorizontalAlignment="Left" Height="60" Margin="0,239,0,0" VerticalAlignment="Top" Width="400" FontSize="25" Background="#00000000"/>
        <HyperlinkButton x:ConnectionId='1' x:Name="email" Content="email" HorizontalAlignment="Left" Height="63" Margin="0,304,0,0" VerticalAlignment="Top" Width="400" FontSize="25" Background="#00000000"                    />
        <HyperlinkButton x:Name="webpage" Content="offical webpage" NavigateUri="http://veligovsek.si/events/" HorizontalAlignment="Left" Height="63" Margin="0,372,0,0" VerticalAlignment="Top" Width="400" FontSize="25" Background="#00000000"/>
   
    </Grid>
</Page>

